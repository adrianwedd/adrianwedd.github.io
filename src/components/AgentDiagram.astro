---
export interface Props {
  diagram: string;
}
const { diagram } = Astro.props;
---
<div class="my-4">
  <pre class="mermaid">
{diagram}
  </pre>
</div>
<script client:load type="module">
  import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
  mermaid.initialize({ startOnLoad: true });
</script>

